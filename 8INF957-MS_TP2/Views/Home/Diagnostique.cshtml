@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using _8INF957_MS_TP2.Models
@{
	ViewData["Title"] = "Diagnostique";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@model PatientsList

<h1>Diagnostique</h1>

<form>
	@Html.DropDownListFor(m => m.SelectedPatientId, Model.Patients)
	<input class="btn btn-secondary" type="submit" value="Informations" asp-controller="Home" asp-action="ViewPatient" />
	<input class="btn btn-secondary" type="submit" value="Ajouter un patient" asp-controller="Home" asp-action="AddPatient" />
</form>
<form>
	<fieldset class="border p-2">
		<legend class="float-none w-auto">Paramètres</legend>
		@Html.LabelFor(m => m.SelectedPatientId)
		@Html.DropDownListFor(m => m.SelectedPatientId, Model.Patients)
		<br/>
		@Html.LabelFor(m => m.SelectedPatientId)
		@Html.DropDownListFor(m => m.SelectedPatientId, Model.Patients)
		<br/>
		<label for="oldpeak">Dépression ST induite par l'exercice par rapport au repos</label>
		<input id="oldpeak" type="number" min="0" max="6.2" step="0.1"/>
		<br/>
		<label for="ca">Nombre de gros vaisseaux colorés par fluoroscopie</label>
		<input id="ca" type="number" min="0" max="3" step="1"/>
		<br/>
	</fieldset>
</form>