@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="fr-ca">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
	<title>@ViewData["Title"] - TP2 8INF957 MS</title>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			@if(User.Identity.IsAuthenticated) 
			{
				<div class="container-fluid">
					<a class="navbar-brand" asp-controller="Account" asp-action="Informations">TP2 8INF957 MS</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
							aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
						<ul class="navbar-nav flex-grow-1">
							<li class="nav-item">
								<a class="nav-link" asp-controller="Account" asp-action="Informations">Informations</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-controller="Diagnostique" asp-action="Index">Diagnostique</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-controller="ConfigurationIa" asp-action="Index">Configuration IA</a>
							</li>
						</ul>
					</div>
				</div>
				<div class="float-right">
					<a class="nav-link" asp-controller="Account" asp-action="Logout">Déconnexion</a>
				</div>
			}
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			<h1>@ViewData["Title"]</h1>
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2022 - TP2 8INF957 MS
		</div>
	</footer>
</body>
</html>
